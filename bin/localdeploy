#!/bin/sh

set -e

if [[ -n $(git status --porcelain) ]]; then echo "repo is dirty"; exit 1; fi

# make sure we are up-to-date
git checkout dev
git pull

# build
rm -rf _site
bundle exec jekyll build

# where are we at
REV=`git rev-parse --short HEAD`

# change to gh-pages branch
git checkout master

# make sure we have latest master
git pull

# sync .gitignore
git checkout dev -- .gitignore
git commit --allow-empty -m "sync .gitignore with dev branch"

# commit site changes
cp -r -f _site/* .
git add .
git commit -m "deploy ${REV}"

# update the public site
git push origin master

# restore development branch
git checkout dev
